{
  "$schema": "https://raw.githubusercontent.com/dotnet/Nerdbank.GitVersioning/main/src/NerdBank.GitVersioning/version.schema.json",
  "version": "1.0",
  "pathFilters": [ "." ], // only bump the version for this project instead of all projects in the repo
  "publicReleaseRefSpec": [
    "^refs/heads/master$", // we release out of master
    //"^refs/tags/v\\d+\\.\\d+" // we also release tags starting with vN.N -- actually, no since every project will have a different version
  ]
}
